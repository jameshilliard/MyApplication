<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface_different_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_video_view_background" />

    </FrameLayout>

    <!-- 自定义跑马灯 -->
    <com.lry.songmachine.util.MarqueeTextView
        android:id="@+id/tv_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/image_atmosphere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/image_frame_expression"
        android:visibility="gone" />

</RelativeLayout>